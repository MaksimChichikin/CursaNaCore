<Window x:Class="CurcaNaCore.Views.AdminPage.AddAdminPage.TaskAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurcaNaCore.Views.AdminPage.AddAdminPage"
        mc:Ignorable="d"
        Title="ЮниКосметик" MinHeight="160" MinWidth="250" Height="160" Width="250" WindowStartupLocation="CenterScreen" Icon="/Resource/Imagine/myicon.png" >
    <Grid Background="#e9e9e9">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" >
            <GroupBox Header="Выберите номер заказа:" BorderThickness="0"
                     >
                <ComboBox 
                    Name="CmbOrder"/>
            </GroupBox>

            <GroupBox Header="Выберите номер доставки:" BorderThickness="0"
                     >
                <ComboBox 
                    Name="CmbDelivery"/>
            </GroupBox>
            <Button Style="{StaticResource CustomButtonStyle}" Click="BtnAddTask_Click"
                Width="150"
                    Height="25"
                Name="BtnAddTask"
                Content="Добавить задачу"
                BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
