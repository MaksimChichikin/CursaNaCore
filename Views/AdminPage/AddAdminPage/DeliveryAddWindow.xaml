<Window x:Class="CurcaNaCore.Views.AdminPage.AddAdminPage.DeliveryAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurcaNaCore.Views.AdminPage.AddAdminPage"
        mc:Ignorable="d"
              Title="ЮниКосметик" MinHeight="200" MinWidth="250" Height="200" Width="250" WindowStartupLocation="CenterScreen" Icon="/Resource/Imagine/myicon.png" >
    <Grid Background="#e9e9e9">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" >
            <GroupBox Header="Введите количество товара:" BorderThickness="0"
                      >
                <TextBox 
                    Name="TxbValume"/>
            </GroupBox>
            <GroupBox Header="Выберите статус:" BorderThickness="0"
                      >
                <ComboBox  
                    Name="CmbStatus"/>
            </GroupBox>

            <Button Style="{StaticResource CustomButtonStyle}" Click="BtnAddDelivery_Click"
                Width="150"
                    Height="25"
                Name="BtnAddDelivery"
                Content="Добавить доставку"
                BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
