<Window x:Class="CurcaNaCore.Views.AutorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurcaNaCore.Views"
        mc:Ignorable="d"
          Height="120" Width="200"  Title="ЮниКосметик"  WindowStartupLocation="CenterScreen" Icon="/Resource/Imagine/myicon.png">
    <Grid>
        <StackPanel Width="150" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox  Name="TxbLogin"/>
            <PasswordBox Margin="0 5 0 10" Name="PbPassword"/>
            <Button Height="20" Content="Авторизоваться" Name="BtnAuth" Click="BtnAuth_Click"/>
        </StackPanel>
    </Grid>
</Window>
